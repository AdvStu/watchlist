{{#layout}}
  {{#if tokens.length}}
  <h2>Tokens</h2>
  <table>
    <thead>
      <tr>
        <th>Token</th>
        <th>Created At</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each tokens}}
      <tr>
        <td>{{this.token}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <form method="post" action="/tokens/{{this.id}}?_method=DELETE">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <p>No tokens found</p>
  {{/if}}

  <h2>Create New Token</h2>
  <p>Use this token as a bearer token in your API requests.</p>
  <form method="post" action="/tokens">
    <button type="submit">Create Token</button>
  </form>
{{/layout}}
